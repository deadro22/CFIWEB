<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <title>CFI | Auth</title>
    <% include header.ejs %>
  </head>
  <body>
    <% include menuNav.ejs %>
    <div class="row mx-auto">
      <div class="col" id="cl_for">
        <form action="/auth/login" method="post">
          <%if(lerr_msg != ""){%>
          <div class="alert alert-warning">
            <%=lerr_msg%>
            <a
              href="#"
              class="close"
              data-dismiss="alert"
              aria-label="close"
              title="close"
              >×</a
            >
          </div>
          <%}%>
          <label>
            <p class="label-txt">ENTER YOUR EMAIL</p>
            <input
              type="email"
              class="input"
              autocomplete="off"
              name="lEmail"
            />
            <div class="line-box">
              <div class="line"></div>
            </div>
          </label>
          <label>
            <p class="label-txt">ENTER YOUR PASSWORD</p>
            <input
              type="password"
              class="input"
              autocomplete="off"
              name="lPassword"
            />
            <div class="line-box">
              <div class="line"></div>
            </div>
          </label>
          <button type="submit">Login</button>
        </form>
      </div>
      <div class="col" id="cl_for">
        <form action="/auth/register" method="post">
          <%if(err_msg != ""){%>
          <div class="alert alert-warning">
            <%= err_msg %>
            <a
              href="#"
              class="close"
              data-dismiss="alert"
              aria-label="close"
              title="close"
              >×</a
            >
          </div>
          <%}%>
          <label>
            <p class="label-txt">ENTER YOUR EMAIL</p>
            <input type="text" class="input" autocomplete="off" name="rEmail" />
            <div class="line-box">
              <div class="line"></div>
            </div>
          </label>
          <label>
            <p class="label-txt">ENTER YOUR NAME</p>
            <input
              type="text"
              class="input"
              autocomplete="off"
              name="rUsername"
            />
            <div class="line-box">
              <div class="line"></div>
            </div>
          </label>
          <label>
            <p class="label-txt">ENTER YOUR PASSWORD</p>
            <input
              type="password"
              class="input"
              autocomplete="off"
              name="rPassword"
            />
            <div class="line-box">
              <div class="line"></div>
            </div>
          </label>
          <label>
            <p class="label-txt">CONFIRM YOUR PASSWORD</p>
            <input
              type="password"
              class="input"
              autocomplete="off"
              name="rCPassword"
            />
            <div class="line-box">
              <div class="line"></div>
            </div>
          </label>
          <button type="submit">Register</button>
        </form>
      </div>
    </div>
    <% include footer.ejs %>
  </body>
</html>
